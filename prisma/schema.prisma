generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
}

model User {
    id     String @id @default(uuid())
    pseudo String
    email  String @unique
    score  Int    @default(0)
}

model AchivedFlag {
    id     String   @id @default(uuid())
    userId String
    flagId String
    date   DateTime @default(now())
}
